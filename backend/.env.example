# Environment Variables
NODE_ENV=development
PORT=5000

# MongoDB Connection
# For local development, use:
# MONGODB_URI=mongodb://localhost:27017/gaugyan
# For MongoDB Atlas (production), use:
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gaugyan?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=30d

# Frontend URL (for CORS)
FRONTEND_URL=https://gaugyanworld.org

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
