    const addQuiz = (quiz) => setQuizzes([...quizzes, { ...quiz, id: Date.now() }]);
    const deleteQuiz = (id) => setQuizzes(quizzes.filter(q => q.id !== id));
    const updateQuiz = (id, updatedData) => setQuizzes(quizzes.map(q => q.id === id ? { ...q, ...updatedData } : q));

    // Products
    const addProduct = (product) => setProducts([...products, { ...product, id: Date.now() }]);
    const deleteProduct = (id) => setProducts(products.filter(p => p.id !== id));
    const updateProduct = (id, updatedData) => setProducts(products.map(p => p.id === id ? { ...p, ...updatedData } : p));
    const addProductCategory = (category) => setProductCategories([...productCategories, { ...category, id: Date.now() }]);
    const deleteProductCategory = (id) => setProductCategories(productCategories.filter(c => c.id !== id));
    const updateProductCategory = (id, updatedData) => setProductCategories(productCategories.map(c => c.id === id ? { ...c, ...updatedData } : c));

    // Music
    const addMusic = (track) => setMusic([...music, { ...track, id: Date.now(), plays: 0, likes: 0, rating: 0 }]);
    const deleteMusic = (id) => setMusic(music.filter(m => m.id !== id));
    const updateMusic = (id, updatedData) => setMusic(music.map(m => m.id === id ? { ...m, ...updatedData } : m));

    // Contact Messages
    const addContactMessage = (message) => setContactMessages([...contactMessages, { ...message, id: Date.now(), date: new Date().toISOString(), status: 'unread' }]);
    const deleteContactMessage = (id) => setContactMessages(contactMessages.filter(m => m.id !== id));
    const updateContactMessage = (id, updatedData) => setContactMessages(contactMessages.map(m => m.id === id ? { ...m, ...updatedData } : m));
    const markMessageAsRead = (id) => setContactMessages(contactMessages.map(m => m.id === id ? { ...m, status: 'read' } : m));

    // Home Sliders
    const addHomeSlider = (slider) => setHomeSliders([...homeSliders, { ...slider, id: Date.now() }]);
    const deleteHomeSlider = (id) => setHomeSliders(homeSliders.filter(s => s.id !== id));
    const updateHomeSlider = (id, updatedData) => setHomeSliders(homeSliders.map(s => s.id === id ? { ...s, ...updatedData } : s));

    // Music Taxonomies
    const addMusicAlbum = (album) => setMusicAlbums([...musicAlbums, { ...album, id: Date.now() }]);
    const deleteMusicAlbum = (id) => setMusicAlbums(musicAlbums.filter(a => a.id !== id));
    const updateMusicAlbum = (id, updatedData) => setMusicAlbums(musicAlbums.map(a => a.id === id ? { ...a, ...updatedData } : a));

    const addMusicGenre = (genre) => setMusicGenres([...musicGenres, { ...genre, id: Date.now() }]);
    const deleteMusicGenre = (id) => setMusicGenres(musicGenres.filter(g => g.id !== id));
    const updateMusicGenre = (id, updatedData) => setMusicGenres(musicGenres.map(g => g.id === id ? { ...g, ...updatedData } : g));

    const addMusicMood = (mood) => setMusicMoods([...musicMoods, { ...mood, id: Date.now() }]);
    const deleteMusicMood = (id) => setMusicMoods(musicMoods.filter(m => m.id !== id));
    const updateMusicMood = (id, updatedData) => setMusicMoods(musicMoods.map(m => m.id === id ? { ...m, ...updatedData } : m));

    // Podcasts
    const addPodcast = (podcast) => setPodcasts([...podcasts, { ...podcast, id: Date.now(), plays: 0, likes: 0, rating: 0 }]);
    const deletePodcast = (id) => setPodcasts(podcasts.filter(p => p.id !== id));
    const updatePodcast = (id, updatedData) => setPodcasts(podcasts.map(p => p.id === id ? { ...p, ...updatedData } : p));

    // Podcast Taxonomies
    const addPodcastSeries = (series) => setPodcastSeries([...podcastSeries, { ...series, id: Date.now() }]);
    const deletePodcastSeries = (id) => setPodcastSeries(podcastSeries.filter(s => s.id !== id));
    const updatePodcastSeries = (id, updatedData) => setPodcastSeries(podcastSeries.map(s => s.id === id ? { ...s, ...updatedData } : s));

    const addPodcastCategory = (category) => setPodcastCategories([...podcastCategories, { ...category, id: Date.now() }]);
    const deletePodcastCategory = (id) => setPodcastCategories(podcastCategories.filter(c => c.id !== id));
    const updatePodcastCategory = (id, updatedData) => setPodcastCategories(podcastCategories.map(c => c.id === id ? { ...c, ...updatedData } : c));

    // Meditation
    const addMeditation = (session) => setMeditation([...meditation, { ...session, id: Date.now(), plays: 0, likes: 0, rating: 0 }]);
    const deleteMeditation = (id) => setMeditation(meditation.filter(m => m.id !== id));
    const updateMeditation = (id, updatedData) => setMeditation(meditation.map(m => m.id === id ? { ...m, ...updatedData } : m));

    // News
    const addNews = (article) => setNews([...news, { ...article, id: Date.now(), views: 0, publishDate: new Date().toISOString().split('T')[0] }]);
    const deleteNews = (id) => setNews(news.filter(n => n.id !== id));
    const updateNews = (id, updatedData) => setNews(news.map(n => n.id === id ? { ...n, ...updatedData } : n));

    // News Categories
    const addNewsCategory = (category) => setNewsCategories([...newsCategories, { ...category, id: Date.now() }]);
    const deleteNewsCategory = (id) => setNewsCategories(newsCategories.filter(c => c.id !== id));
    const updateNewsCategory = (id, updatedData) => setNewsCategories(newsCategories.map(c => c.id === id ? { ...c, ...updatedData } : c));

    // Knowledgebase
    const addKnowledgebase = (article) => setKnowledgebase([...knowledgebase, { ...article, id: Date.now(), views: 0, helpful: 0, lastUpdated: new Date().toISOString().split('T')[0] }]);
    const deleteKnowledgebase = (id) => setKnowledgebase(knowledgebase.filter(k => k.id !== id));
    const updateKnowledgebase = (id, updatedData) => setKnowledgebase(knowledgebase.map(k => k.id === id ? { ...k, ...updatedData } : k));
    const addKnowledgebaseCategory = (category) => setKnowledgebaseCategories([...knowledgebaseCategories, { ...category, id: Date.now() }]);
    const deleteKnowledgebaseCategory = (id) => setKnowledgebaseCategories(knowledgebaseCategories.filter(c => c.id !== id));

    // Gaushala
    const addGaushala = (cow) => setGaushala([...gaushala, { ...cow, id: Date.now() }]);
    const deleteGaushala = (id) => setGaushala(gaushala.filter(g => g.id !== id));
    const updateGaushala = (id, updatedData) => setGaushala(gaushala.map(g => g.id === id ? { ...g, ...updatedData } : g));

    // Questions
    const addQuestion = (question) => setQuestions([...questions, { ...question, id: Date.now() }]);
    const deleteQuestion = (id) => setQuestions(questions.filter(q => q.id !== id));
    const updateQuestion = (id, updatedData) => setQuestions(questions.map(q => q.id === id ? { ...q, ...updatedData } : q));

    // Results
    const submitResult = (result) => setResults([...results, { ...result, id: Date.now(), date: new Date().toISOString() }]);

    // Users
    const addUser = (user) => setUsers([...users, { ...user, id: Date.now(), createdAt: new Date().toISOString().split('T')[0], status: 'active' }]);
    const deleteUser = (id) => setUsers(users.filter(u => u.id !== id));
    const updateUser = (id, updatedData) => setUsers(users.map(u => u.id === id ? { ...u, ...updatedData } : u));
    const toggleUserStatus = (id) => setUsers(users.map(u => u.id === id ? { ...u, status: u.status === 'active' ? 'inactive' : 'active' } : u));

    return (
        <DataContext.Provider value={{
            // Courses
            courses, addCourse, deleteCourse, updateCourse,
            courseCategories, addCourseCategory, deleteCourseCategory,
            // Exams
            exams, addExam, deleteExam, updateExam,
            examCategories, addExamCategory, deleteExamCategory,
            // Quizzes
            quizzes, addQuiz, deleteQuiz, updateQuiz,
            // Questions
            questions, addQuestion, deleteQuestion, updateQuestion,
            // Results
            results, submitResult,
            // Products
            productCategories, addProductCategory, deleteProductCategory, updateProductCategory,
            products, addProduct, deleteProduct, updateProduct,
            // Music
            music, addMusic, deleteMusic, updateMusic,
            musicAlbums, addMusicAlbum, deleteMusicAlbum, updateMusicAlbum,
            musicGenres, addMusicGenre, deleteMusicGenre, updateMusicGenre,
            musicMoods, addMusicMood, deleteMusicMood, updateMusicMood,
            // Podcasts
            podcasts, addPodcast, deletePodcast, updatePodcast,
            podcastSeries, addPodcastSeries, deletePodcastSeries, updatePodcastSeries,
            podcastCategories, addPodcastCategory, deletePodcastCategory, updatePodcastCategory,
            // Meditation
            meditation, addMeditation, deleteMeditation, updateMeditation,
