    // CRUD Operations

    // Courses
    const addCourse = (course) => setCourses([...courses, { ...course, id: Date.now(), students: 0, lectures: 0 }]);
    const deleteCourse = (id) => setCourses(courses.filter(c => c.id !== id));
    const updateCourse = (id, updatedData) => setCourses(courses.map(c => c.id === id ? { ...c, ...updatedData } : c));
    const addCourseCategory = (category) => setCourseCategories([...courseCategories, { ...category, id: Date.now() }]);
    const deleteCourseCategory = (id) => setCourseCategories(courseCategories.filter(c => c.id !== id));

